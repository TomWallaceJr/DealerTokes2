{
  // Use workspace TypeScript for consistent TS/JS behavior
  "typescript.tsdk": "node_modules/typescript/lib",

  // Prettier as default formatter, format on save
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // ESLint: fix on save where possible
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // Apply ESLint to TS/JS files
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Keep files consistent across OS
  "files.eol": "\n"
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  email     String  @unique
  name      String?
  createdAt DateTime @default(now())
  shifts    Shift[]
}

model Shift {
  id          String   @id @default(cuid())
  userId      String
  date        DateTime
  casino      String
  hours       Float
  tokesCash   Int       @default(0)
  tokesCards  Int       @default(0)
  tokesChips  Int       @default(0)
  tokesOther  Int       @default(0)
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id])
  @@index([userId, date])
}

############################################################
# Core application environment variables (copy to .env)
############################################################

# Database connection string (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DBNAME?schema=public
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dealertokes

# NextAuth
NEXTAUTH_URL=http://localhost:3000
# Generate a strong secret: `openssl rand -hex 32`
NEXTAUTH_SECRET=

# Public branding
NEXT_PUBLIC_APP_NAME=DownCount

# Demo sign-in (used by the Try Demo button)
NEXT_PUBLIC_DEMO_EMAIL=demo@example.com
NEXT_PUBLIC_DEMO_PASSWORD=Demo123!

# Client error reporting (optional; enables Sentry in the browser if set)
# Get a DSN from Sentry project settings
NEXT_PUBLIC_SENTRY_DSN=
